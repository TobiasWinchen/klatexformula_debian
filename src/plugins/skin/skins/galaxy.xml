<?xml version='1.0' encoding='UTF-8'?>
<klf-skin>
  <!-- Galaxy klatexformula skin definition

       Background image from NASA's "image of the day" at
           http://www.nasa.gov/images/content/190590main_GPN-2000-000895.jpg
    -->
  <name>Galaxy</name>
  <author>Philippe Faist</author>
  <description>A generally dark interspace nebula background</description>

  <!--
      Parametrize flattemplate.qss as we want. See header in flattemplate.qss for details.
    -->
  <def name="BG_MAIN">url(:/plugindata/skin/stylesheets/pics/bg_galaxy.jpg) no-repeat</def>
  <def name="COLOR_MAIN">rgb(200,200,200)</def>
  <def name="COLOR_DISABLED">rgb(160,160,160)</def>
  <def name="COLOR_APPROX_BG">black</def>
  <def name="COLOR_TOOLTIP">white</def>

  <def name="BG_PANE">rgb(255,255,255,80)</def>
  <def name="COLOR_PANE">black</def>

  <def name="COLOR_SELBG">rgb(255,255,255,50)</def>

  <def name="BG_L_OVRL_LOW">rgb(180,180,180,30)</def>
  <def name="BG_L_OVRL_MED">rgb(255,255,255,50)</def>
  <def name="BG_L_OVRL_HI">rgb(255,255,255,80)</def>

  <def name="BG_D_OVRL_LOW">rgb(255,255,255,40)</def>
  <def name="BG_D_OVRL_MED">rgb(255,255,255,70)</def>
  <def name="BG_D_OVRL_HI">rgb(255,255,255,80)</def>
  <def name="BG_D_OVRL_DARK">rgb(255,255,255,140)</def>

  <def name="BORCOLOR_D_MED">rgb(255,255,255,10)</def>
  <def name="BORCOLOR_D_HI">rgb(255,255,255,40)</def>
  <def name="BORCOLOR_D_VERYHI">rgb(255,255,255,60)</def>
  <def name="BORCOLOR_L_MED">rgb(255,255,255,50)</def>

  <def name="BG_SEARCH_FOUND">rgb(128,255,128,120)</def>
  <def name="BG_SEARCH_NOTFOUND">rgb(255,128,180,120)</def>

  <def name="BORDER_POPUP">1px solid rgb(80,80,80)</def>

  <def name="BTN_ROUND_PX">1px</def>
  <def name="TAB_ROUND_PX">2px</def>

  <def name="CHKIMG_BASE_NAME">:/plugindata/skin/stylesheets/pics/flat-chk</def>

  <stylesheet>:/plugindata/skin/stylesheets/flattemplate.qss</stylesheet>

  <!-- Include our own definitions -->
  <stylesheet>:/plugindata/skin/stylesheets/galaxy.qss</stylesheet>

  <!-- Provide a syntax highlighting scheme -->
  <syntax-highlighting-scheme>
    <keyword>{CharFormat;ForegroundBrush=(67 149 255 255)}</keyword>
    <comment>{CharFormat;ForegroundBrush=(255 81 81 255);ITALIC}</comment>
    <paren-match>{CharFormat;BackgroundBrush=(74 188 126 105)}</paren-match>
    <paren-mismatch>{CharFormat;BackgroundBrush=(255 20 147 98)}</paren-mismatch>
    <lonely-paren>{CharFormat;ForegroundBrush=(228 0 103 255);BOLD}</lonely-paren>
  </syntax-highlighting-scheme>
</klf-skin>
