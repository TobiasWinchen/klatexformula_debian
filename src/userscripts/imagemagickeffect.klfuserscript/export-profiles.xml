<?xml version='1.0' encoding='UTF-8'?>
<!--
  Export Profile for ImageMagick Effect User Script
  -->
<export-profile-list version="4.0">

  <profile name="imagemagick_effect_outer_glow">
    <description>Outer Glow Effect (PNG)</description>
    <in-submenu>Effects</in-submenu>

    <export-type exporter="UserScript:imagemagickeffect" format="outer-glow">
      <default-qt-formats type="image" />
    </export-type>
  </profile>

  <profile name="imagemagick_effect_wave">
