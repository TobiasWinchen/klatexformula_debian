<?xml version='1.0' encoding='UTF-8'?>
<klf-skin>
  <!-- Papyrus klatexformula skin definition

       Background image is thanks to "Paper" pattern in the GIMP
    -->

  <name>Papyrus</name>
  <author>Philippe Faist</author>
  <description>Hieroglyphic characters are not (yet) supported in klatexformula...</description>

  <!--
      Parametrize flattemplate.qss as we want. See header in flattemplate.qss for details.
    -->
  <def name="BG_MAIN">url(:/plugindata/skin/stylesheets/pics/bg_papyrus.jpg) no-repeat</def>
  <def name="COLOR_MAIN">black</def>
  <def name="COLOR_DISABLED">rgb(127,111,86)</def>
  <def name="COLOR_APPROX_BG">rgb(190,179,156)</def>
  <def name="COLOR_TOOLTIP">rgb(40,37,33)</def>

  <def name="BG_PANE">transparent</def>
  <def name="COLOR_PANE">black</def>

  <def name="COLOR_SELBG">rgb(0,0,0,50)</def>

  <def name="BG_L_OVRL_LOW">rgb(255,255,255,70)</def>
  <def name="BG_L_OVRL_MED">rgb(255,255,255,100)</def>
  <def name="BG_L_OVRL_HI">rgb(255,255,255,150)</def>

  <def name="BG_D_OVRL_LOW">rgb(0,0,0,20)</def>
  <def name="BG_D_OVRL_MED">rgb(0,0,0,40)</def>
  <def name="BG_D_OVRL_HI">rgb(0,0,0,70)</def>
  <def name="BG_D_OVRL_DARK">rgb(0,0,0,120)</def>

  <def name="BORCOLOR_D_MED">rgb(0,0,0,50)</def>
  <def name="BORCOLOR_D_HI">rgb(0,0,0,80)</def>
  <def name="BORCOLOR_D_VERYHI">rgb(0,0,0,110)</def>
  <def name="BORCOLOR_L_MED">rgb(255,255,255,50)</def>

  <def name="BG_SEARCH_FOUND">rgb(128,255,128,128)</def>
  <def name="BG_SEARCH_NOTFOUND">rgb(255,128,128,128)</def>

  <def name="BORDER_POPUP">1px solid rgb(80,80,80)</def>

  <def name="BTN_ROUND_PX">2px</def>
  <def name="TAB_ROUND_PX">4px</def>

  <def name="CHKIMG_BASE_NAME">:/plugindata/skin/stylesheets/pics/flat-chk</def>

  <stylesheet>:/plugindata/skin/stylesheets/flattemplate.qss</stylesheet>

  <!-- Include our own definitions -->
  <stylesheet>:/plugindata/skin/stylesheets/papyrus.qss</stylesheet>

  <!-- Provide a syntax highlighting scheme -->
  <syntax-highlighting-scheme>
    <keyword>{CharFormat;ForegroundBrush=(0 0 128 255)}</keyword>
    <comment>{CharFormat;ForegroundBrush=(220 0 3 255);ITALIC}</comment>
    <paren-match>{CharFormat;BackgroundBrush=(74 188 126 105)}</paren-match>
    <paren-mismatch>{CharFormat;BackgroundBrush=(255 20 147 98)}</paren-mismatch>
    <lonely-paren>{CharFormat;ForegroundBrush=(228 0 103 255);BOLD}</lonely-paren>
  </syntax-highlighting-scheme>
</klf-skin>
